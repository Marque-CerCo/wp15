BootStrap: docker
From: python:3

%labels
    org.opencontainers.image.source = "https://github.com/SIESTA-eu/wp15"

%setup
    mkdir -p /tmp/python_script
    cp mergegroup.py /tmp/python_script/mergegroup.py
    
%post

    apt-get update && apt-get install -y python3-pip
    pip install numpy 
    chmod +x /tmp/python_script/mergegroup.py

%environment
  export LC_ALL=C
   
%runscript

    python /tmp/python_script/mergegroup.py
    

